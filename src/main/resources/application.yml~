server:
  port: 1111    #default port where the service will be started
 
eureka:         #tells about the Eureka server details and its refresh time
  instance:
    leaseRenewalIntervalInSeconds: 10
    leaseExpirationDurationInSeconds: 30
  client:
    serviceUrl:
      defaultZone: http://192.168.122.165/eureka/
    healthcheck:
      enabled: true
    lease:
      duration: 5
 
spring:    
  application:
    name: service1   #current service name to be used by the eureka server
  zipkin:
    baseUrl: http://192.168.122.165/kong-mirror/zipkin
  sleuth:
    sampler:
      probability: 1.0   
     
management:
  security:
    enabled: false  #disable the spring security on the management endpoints like /env, /refresh etc.
        
 
